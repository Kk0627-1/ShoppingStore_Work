<% layout('layout/boilerplate')%>
    <div id="body-container">
        <div id="body-div1">
            <div id="category-container" class="container">
                <div id="category-board"><b>類別</b></div>
                <div id="category-item1-container" class="container">
                    <div id="cloth-item-div" class="img-a-div">
                        <div>
                            <div>
                                <img  alt="" src="/image/cloth.jpg">
                            </div>
                            <a href="/shoppingstore/cloth">clothing</a>
                        </div>
                    </div>
                    <div id="shoes-item-div" class="img-a-div">
                        <div>
                            <img src="/image/shoes.jpg" alt="">
                        </div>
                        <a href="/shoppingstore/shoes">shoes</a>
                    </div>
                    <div id="cap-item-div" class="img-a-div">
                        <div>
                            <img src="/image/cap.jpg" alt="">
                        </div>
                        <a href="/shoppingstore/cap">cap</a>
                    </div>
                    <div id="3c-item-div" class="img-a-div">
                        <div>
                            <img src="/image/3c_product.jpg" alt="">
                        </div>
                        <a href="/shoppingstore/3c_product">3c product</a>
                    </div>
                </div>
                <div id="category-item2-container" class="container">
                    <div class="img-a-div">
                        <div>
                            <img src="/image/food.jpg" alt="">
                        </div>
                        <a href="/shoppingstore/food">food</a>
                    </div>
                    <div class="img-a-div">
                        <div>
                            <img src="/image/card.jpg" alt="">
                        </div>
                        <a href="/shoppingstore/card">card</a>
                    </div>
                    <div class="img-a-div">
                        <div>
                            <img src="/image/toy.jpg" alt="">
                        </div>
                        <a href="/shoppingstore/toy">toy</a>
                    </div>
                    <div class="img-a-div">
                        <div>
                            <img src="/image/book.jpg" alt="">
                        </div>
                        <a href="/shoppingstore/book">book</a>
                    </div>
                </div>
            </div>


            <div id="hot-container" class="container">
                <div id="hot-board">
                    <p><b>Hot</b></p>
                </div>
                <div id="ul-div">
                    <ul>
                        <li>
                            <a href="">最多人購買</a>
                            <div id="body-container" class="container mb-5">
                                <% for (let hotCommodity of hotCommoditylistperchase_num){%>
                                <% if ( hotCommodity.perchase_num != 0 ) { %>
                                <div class="card" id="commodity-container">
                                    <div class="row">
                                        <div class="col-mb-4">
                                            <img  class="index-img" alt="" src="<%=hotCommodity.commodity.image%>">
                                            <div>
                                                <h5><%= hotCommodity.commodity.title %></h5>
                                                <p><%= hotCommodity.commodity.description %></p>
                                                <p>已有<%= hotCommodity.perchase_num %>人購買</p>
                                                <a href="/shoppingstore/<%=hotCommodity.commodity._id%>">Go!</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                                <% } %>
                            </div>
                        </li>
                        <li>
                            <a href="">最多人點擊</a>
                            <div id="body-container" class="container mb-5">
                                <% for (let hotCommodity of hotCommoditylistclick_num){%>
                                <% if ( hotCommodity.click_num != 0 ) { %>
                                <div class="card" id="commodity-container">
                                    <div class="row">
                                        <div class="col-mb-4">
                                            <img  class="index-img" alt="" src="<%=hotCommodity.commodity.image%>">
                                            <div>
                                                <h5><%= hotCommodity.commodity.title %></h5>
                                                <p><%= hotCommodity.commodity.description %></p>
                                                <p>已有<%= hotCommodity.click_num %>人觀看</p>
                                                <a href="/shoppingstore/<%=hotCommodity.commodity._id%>">Go!</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                                <% } %>
                            </div>
                        </li>
                        <li>
                            <a href="">最多人收藏</a>
                            <div id="body-container" class="container mb-5">
                                <% for (let hotCommodity of hotCommoditylistLove_num){%>
                                <% if ( hotCommodity.Love_num != 0 ) { %>
                                <div class="card" id="commodity-container">
                                    <div class="row">
                                        <div class="col-mb-4">
                                            <img  class="index-img" alt="" src="<%=hotCommodity.commodity.image%>">
                                            <div>
                                                <h5><%= hotCommodity.commodity.title %></h5>
                                                <p><%= hotCommodity.commodity.description %></p>
                                                <p>已有<%= hotCommodity.Love_num %>人收藏</p>
                                                <a href="/shoppingstore/<%=hotCommodity.commodity._id%>">Go!</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                                <% } %>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
